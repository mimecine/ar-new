---
const today = new Date();
import { Image } from "astro:assets";
import logoNgs from '../assets/logo-ngs.png';
import logoTate from '../assets/logo-tate.png';

---

<footer class="flex flex-flow-row justify-center items-center gap-8 p-2 text-center text-gray-700 text-sm border-t border-gray-500">
	<a href="https://www.nationalgalleries.org/" target="_new" class="border-0">
		<Image src={logoNgs} alt="National Galleries of Scotland" class="h-12 lg:h-24 w-auto" />
	</a>
	<a href="/about"  class="border-0">&copy; {today.getFullYear()} ARTIST ROOMS FOUNDATION</a>
	<a href="https://tate.org.uk/" target="_new" class="border-0">
		<Image src={logoTate} alt="Tate Modern" class="h-12 lg:h-24 w-auto" />
	  </a>
</footer>
